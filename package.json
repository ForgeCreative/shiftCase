{
  "name": "shiftcase",
  "version": "0.9.8",
  "description": "Copy and paste and format text easy",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron .",
    "pack": "build --dir",
    "dist": "build --mac -p always"
  },
  "repository": "https://github.com/ForgeCreative/shiftcase",
  "keywords": [
    "Electron",
    "Copy",
    "Paste",
    "Clipboard"
  ],
  "build": {
    "dmg": {
      "contents": [
        {
          "x": 200,
          "y": 180
        },
        {
          "x": 440,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 630,
        "height": 350
      }
    }
  },
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^3.0.7",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "electron-clipboard-extended": "^1.1.1",
    "electron-debug": "^2.0.0",
    "electron-updater": "^4.0.6",
    "franc": "^4.0.0",
    "update-electron-app": "^1.3.0"
  },
  "provider": "github",
  "owner": "mariodev12",
  "host": "github.com",
  "protocol": "https",
  "private": false
}
