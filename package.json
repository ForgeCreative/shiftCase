{
  "name": "ShiftCase",
  "version": "1.3.0",
  "description": "Copy and paste and format text easy",
  "main": "main.js",
  "scripts": {
    "start": "npm install && electron .",
    "dist": "node_modules/.bin/build",
    "release": "bash scripts/publish_shiftcase.sh"
  },
  "repository": "https://github.com/ForgeCreative/shiftcase",
  "keywords": [
    "Electron",
    "Copy",
    "Paste",
    "Clipboard"
  ],
  "build": {
    "appId": "com.builtbyforge.com.builtbyforge",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "mas",
        "dmg"
      ],
      "entitlements": "build/entitlements.mac.plist",
      "provisioningProfile": "build/embedded.provisionprofile",
      "identity": "42T54MWP33",
      "type": "distribution",
      "icon": "build/icon.icns"
    },
    "mas": {
      "entitlements": "build/entitlements.mas.plist",
      "type": "distribution",
      "category": "public.app-category.productivity"
    },
    "files": [
      "style.css",
      "ss-light.png",
      "ss.png",
      "index.html",
      "main.js",
      "renderer.js",
      "fonts/*",
      "assets/*",
      "node_modules/**/*",
      "package.json",
      "embedded.provisionprofile"
    ]
  },
  "author": "Forge",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-builder": "*"
  },
  "dependencies": {
    "electron-clipboard-extended": "^1.1.1",
    "electron-osx-sign": "^0.4.11"
  }
}
